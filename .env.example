# Storage Configuration
SYNCED_FOLDER=/media/ssd/synced
UNSYNCED_FOLDER=/media/ssd/unsynced
BACKUP_FOLDER=/home/pi/music_backup
DATABASE_PATH=/home/pi/music_player.db

# Special Files
GAYATRI_MANTRA_PATH=/media/ssd/special/gayatri_mantra.mp3

# Logging
LOG_FILE=/home/pi/music_player.log
LOG_LEVEL=INFO

# Web Server
WEB_PORT=5000
WEB_HOST=0.0.0.0

# Scheduling - CUSTOMIZE FOR EACH PI
# Pi 1 Schedule
START_TIME=07:00
END_TIME=23:00
GAYATRI_TIMES=07:00,19:00

# Pi 2 Schedule (example: different times)
# START_TIME=08:00
# END_TIME=22:00
# GAYATRI_TIMES=08:00,18:00

GAYATRI_DURATION=240

# File Upload
MAX_UPLOAD_SIZE=104857600
UPLOAD_CHUNK_SIZE=1048576

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
ADMIN_EMAILS=admin@example.com

# Security
SECRET_KEY=change-this-to-a-random-secret-key
ACCESS_TOKEN_EXPIRE_HOURS=24

# Storage Monitoring
STORAGE_CHECK_INTERVAL=30
STORAGE_WARNING_THRESHOLD=0.9

# WebSocket
WEBSOCKET_PING_INTERVAL=25
WEBSOCKET_PING_TIMEOUT=60
